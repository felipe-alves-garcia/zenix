<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="m-0">Adicionar Registro: </h2>
            <hr style="border:2px #212529 solid; opacity:1; border-radius:100px" class="my-2 mb-4">
            <form action="/uber/add/post" method="POST">
                <label for="ganho" id="labelUber">Ganho</label>
                <input type="number" step="any" name="ganho" placeholder="R$0,00" id="inputUber">
                <label for="kmi" id="labelUber">Km início</label>
                <input type="number" step="any" name="kmi" placeholder="0 Km" id="inputUber">
                <label for="kmf" id="labelUber">Km final</label>
                <input type="number" step="any" name="kmf" placeholder="0 Km" id="inputUber">
                <label for="gasolina" id="labelUber">Gasolina/L</label>
                <input type="number" step="any" name="gasolina" placeholder="R$0,00" id="inputUber">
                <label for="carro" id="labelUber">Carro (Km/L)</label>
                <input type="number" step="any" name="carro" placeholder="0 Km/L" id="inputUber">
                <div>
                    <label for="data" id="labelUber">Data</label>
                    <div class="w-100 justify-content-center">
                        <input type="number" id="dataInput" name="dia" value="{{data.dia}}" placeholder="Dia">
                        <input type="number" id="dataInput" name="mes" value="{{data.mes}}" placeholder="Mês">
                        <input type="number" id="dataInput" name="ano" value="{{data.ano}}" placeholder="Ano">    
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="botaoFormUber" type="submit" class="mb-5 mt-3 px-5 py-2">
                        <i class="bi bi-plus-square pe-2"></i>
                        Adicionar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>