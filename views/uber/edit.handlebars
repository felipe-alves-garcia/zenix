<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="m-0">Editar Registro: </h2>
            <hr style="border:2px #212529 solid; opacity:1; border-radius:100px" class="my-2 mb-4">
            <form action="/uber/edit/post" method="POST">
                <input type="hidden" name="id" value="{{registro._id}}">
                <label for="ganho" id="labelUber">Ganho</label>
                <input type="number" step="any" name="ganho" placeholder="R$0,00" id="inputUber" value="{{registro.ganho}}">
                <label for="kmi" id="labelUber">Km início</label>
                <input type="number" step="any" name="kmi" placeholder="0 Km" id="inputUber" value="{{registro.kmi}}">
                <label for="kmf" id="labelUber">Km final</label>
                <input type="number" step="any" name="kmf" placeholder="0 Km" id="inputUber" value="{{registro.kmf}}">
                <label for="gasolina" id="labelUber">Gasolina/L</label>
                <input type="number" step="any" name="gasolina" placeholder="R$0,00" id="inputUber" value="{{registro.gasolina}}">
                <label for="carro id="labelUber"">Carro (Km/L)</label>
                <input type="number" step="any" name="carro" placeholder="0 Km/L" id="inputUber" value="{{registro.carro}}">
                <div>
                    <label for="data" id="labelUber">Data</label>
                    <div class="w-100 justify-content-center">
                        <input type="number" id="dataInput" name="dia" value="{{data.dia}}" placeholder="Dia">
                        <input type="number" id="dataInput" name="mes" value="{{data.mes}}" placeholder="Mês">
                        <input type="number" id="dataInput" name="ano" value="{{data.ano}}" placeholder="Ano">    
                    </div>
                    
                </div>
                <div class="d-flex justify-content-center">
                    <button id="botaoFormUber" type="submit" class="mb-5 mt-3 px-5 py-2 me-5">
                        <i class="bi bi-pencil-square"></i>
                        Editar
                    </button>
                    <a href="/uber/delete/{{registro._id}}" style="text-decoration:none">
                        <div id="botaoDeleteFormUber" class="mb-5 mt-3 px-5 py-2">
                            <i class="bi bi-trash3"></i>
                            Deletar
                        </div>   
                    </a>
                </div>
            </form>
